<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.stock_design"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="false"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:configChanges="locale|orientation"
        android:debuggable="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.example.stock_design.Edit" />
        <activity android:name="com.example.stock_design.About" />
        <activity android:name="com.example.stock_design.Location" />
        <activity
            android:name="com.example.stock_design.Verify"
            android:parentActivityName="com.example.stock_design.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.stock_design.Intro_logo"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.stock_design.Detail"
            android:parentActivityName="com.example.stock_design.Search"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.stock_design.Search"
            android:noHistory="true"
            android:parentActivityName="com.example.stock_design.Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.stock_design.Admin"
            android:parentActivityName="com.example.stock_design.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.stock_design.Counting"
            android:parentActivityName="com.example.stock_design.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.stock_design.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>