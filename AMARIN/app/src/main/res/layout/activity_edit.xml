<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copy"
    android:orientation="vertical"
    tools:context=".Edit"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_border"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            >

            <EditText
                android:id="@+id/search"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/right_round_corner"
                android:hint="ISBN"
                android:imeOptions="actionSearch"
                android:gravity="fill"
                android:layout_weight="1"
                android:inputType="number"
                android:singleLine="true"
                android:textSize="22dp" />

            <ImageButton
                android:id="@+id/btn_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/refresh" />

            <ImageButton
                android:layout_width="40dp"
                android:id="@+id/btn_search"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/search"
                android:background="?android:attr/selectableItemBackground"
                />

        </LinearLayout>



        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/cardview_shadow_start_color"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:id="@+id/txt_total"
            android:textAlignment="center"
            android:gravity="fill"
            android:layout_weight="1"
            android:textSize="27dp"
            ></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/border_style"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="BRANCH"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/txt_br"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="LOCATION"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/txt_lc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ARTICLE"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/txt_article"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="ISBN"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/txt_isbn"
                android:layout_width="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_17sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="PRICE"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/_17sdp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="DESC"
                android:layout_gravity="center"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_weight="0.8"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textSize="20dp"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="QUANTITY"
                android:layout_gravity="center"
                android:textSize="@dimen/_17sdp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text=":"
                android:textSize="@dimen/_17sdp" />
            <EditText
                android:id="@+id/edt_qt"
                android:layout_width="120dp"
                android:background="@drawable/round_corner_border"
                android:layout_height="40dp"
                android:inputType="number"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/bn_ls"
            android:text="Last"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/bn_pv"
            android:text="Previous"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:text="Next"
            android:id="@+id/bt_nx"
            android:layout_height="wrap_content"></Button>
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/bn_st"
            android:text="First"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/bn_up"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE">
    </Button>


</LinearLayout>